<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.loginorregister.LoginActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/ic_launcher"
        app:layout_heightPercent = "5%"
        app:layout_widthPercent="60%"/>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "5%"
        app:layout_widthPercent="80%"
        >


        <TextView
            android:textColor="@color/colorWhite"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="手机号:"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="35%"
            />

        <EditText
            android:id="@+id/login_user"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "5%"
        app:layout_widthPercent="80%"
        >


        <TextView
            android:textColor="@color/colorWhite"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="密码:"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="35%"
            />

        <EditText
            android:id="@+id/login_pwd"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <Button
        android:id="@+id/login_login"
        android:gravity="center"
        android:text="login | 登录"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "7%"
        app:layout_widthPercent="80%"
        />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "7%"
        app:layout_widthPercent="80%"
        >

        <CheckBox
            android:id="@+id/login_check_box"
            android:textColor="@color/colorWhite"
            android:text="  记住密码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="无法登录?"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </android.support.percent.PercentRelativeLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "7%"
        app:layout_widthPercent="80%"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorWhite"
                android:text="没有账号?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorTextColor"
                android:text="点击快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>



</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
