<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trust.ebikeapp.activity.alarm.AlarmActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_car_location_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent="100%"
        android:background="#5a8a94"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="ext"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="报警记录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/activity_blue_device_disconnect"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:text="disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:gravity="center"
        app:layout_heightPercent = "10%">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_widthPercent="90%"
            app:layout_heightPercent = "100%">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:background="@drawable/read_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:text="全部标记已读"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/read_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:text="全部标记未读"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>


    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <LinearLayout
        android:background="#1e455c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/alarm_activity_time"
            android:textColor="@color/colorWhite"
            android:text="2017-5-11 ~ 2017-5-15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:onClick="chooseTime"
            android:id="@+id/activity_car_histroy_select_histroy"
            android:textColor="@color/colorWhite"
            android:text="查询更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent = "10%"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="时间"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:background="#082f45"

            app:layout_widthPercent = "30%"/>
        <TextView
            android:gravity="center"
            android:text="地址"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#082f45"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:layout_widthPercent = "40%" />

        <TextView
            android:gravity="center"
            android:text="类别"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:background="#082f45"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent = "30%"/>


    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <TextView
        android:id="@+id/alarm_activity_nothing"
        app:layout_marginTopPercent = "10%"
        android:gravity="center"
        android:text="该时间段内无数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/alarm_activity_recycler_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>





</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
