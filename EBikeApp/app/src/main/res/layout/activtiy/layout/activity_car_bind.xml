<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.trust.ebikeapp.activity.bind.CarBindActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_car_location_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent="100%"
        app:contentInsetStart="0dp"
        android:background="@color/colorCarHistroyBg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="ext"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="车辆绑定"
                android:textColor="#ffffff"
                android:textSize="22sp" /> />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/activity_blue_device_disconnect"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:text="disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        app:layout_marginTopPercent = "7%"
        android:src="@drawable/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_marginTopPercent = "7%"
        app:layout_widthPercent="80%"
        >

        <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView

            android:gravity="center"
            android:text="手机号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <EditText
            android:id="@+id/activity_car_bind_phone"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />
        </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
        <View
            android:background="#0d0d0d"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_marginTopPercent = "3%"
        app:layout_widthPercent="80%"
        >

        <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:text="设备号:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/activity_car_bind_device_num"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:gravity="center_vertical"

                app:layout_heightPercent="100%"
                app:layout_widthPercent="70%" />

            <ImageView
                android:id="@+id/activity_car_bind_qr_code"
                android:src="@drawable/fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
        <View
            android:background="#0d0d0d"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_marginTopPercent = "3%"
        app:layout_widthPercent="80%"
        >

        <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:gravity="center"
                android:text="验证码:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/activity_car_bind_check_num"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent = "100%"
                app:layout_widthPercent="58%"
                android:background="@null"
                />

            <TextView
                android:id="@+id/activity_car_bind_get_check_num"
                android:gravity="center"
                android:textColor="@color/colorTextColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="点击获取验证码"/>
        </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
        <View
            android:background="#0d0d0d"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent = "80%"
        android:orientation="horizontal"
        app:layout_marginTopPercent = "10%"
        app:layout_heightPercent = "6%">

        <Button
            android:background="@drawable/bind_btn_off_bg"
            android:id="@+id/activity_car_bind_cancel"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent = "50%"
            />

        <Button
            android:id="@+id/activity_car_bind_determine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent = "50%"
            android:background="@drawable/bind_btn_on_bg"
            android:text="确定"
            android:textColor="@color/colorWhite" />


    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>





</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
