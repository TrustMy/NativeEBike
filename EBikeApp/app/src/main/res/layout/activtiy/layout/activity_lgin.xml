<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.loginorregister.LoginActivity">

    <ImageView
        app:layout_marginTopPercent = "5%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_loging"
        />

    <ImageView
        app:layout_marginTopPercent = "5%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/e_bike_loging"
        />



    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_marginTopPercent = "7%"
        app:layout_widthPercent="80%"
        android:background="@drawable/loging_ed_bg"
        >


        <TextView
            app:layout_marginLeftPercent = "6%"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/iphone_loging"
            android:gravity="center"
            android:text="手机号:"
            android:drawablePadding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />

        <EditText
            android:id="@+id/login_user"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        app:layout_marginTopPercent = "2%"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        android:background="@drawable/loging_ed_bg"
        app:layout_widthPercent="80%"
        >


        <TextView
            app:layout_marginLeftPercent = "6%"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/locked_loging"
            android:gravity="center"
            android:text="密码:"
            android:drawablePadding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:textColor="@color/colorWhite"
            android:id="@+id/login_pwd"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <Button
        android:background="@drawable/loging_btn_bg"
        app:layout_marginTopPercent = "5%"
        android:id="@+id/login_login"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="login | 登录"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "6%"
        app:layout_widthPercent="80%"
        />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "7%"
        app:layout_widthPercent="70%"
        app:layout_marginTopPercent = "5%"
        >

        <CheckBox
            android:shadowColor="@color/colorWhite"
            android:id="@+id/login_check_box"
            android:textColor="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:text="  记住密码"
            android:padding="-100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            app:layout_marginLeftPercent ="4%"
            android:id="@+id/login_chang_pwd"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="无法登录?"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </android.support.percent.PercentRelativeLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "7%"
        app:layout_widthPercent="90%"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_marginTopPercent = "10%"
        >

        <LinearLayout
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="4dp"

                android:textColor="@color/colorWhite"
                android:text="没有账号?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="4dp"
                android:textColor="@color/colorTextColor"
                android:text="点击快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>



</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
