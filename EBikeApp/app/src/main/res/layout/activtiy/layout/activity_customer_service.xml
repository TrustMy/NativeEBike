<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.trust.ebikeapp.activity.customerservice.CustomerServiceActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_customer_service_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5a8a94"
        app:contentInsetStart="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/activity_customer_service_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/activity_blue_device_disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="disconnect"
                    android:textColor="#ffffff"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <TextView
        app:layout_marginLeftPercent = "2%"
        app:layout_marginRightPercent = "2%"
        app:layout_marginTopPercent  = "10%"
        android:textSize="24sp"
        android:text="请拍下发表及终端照片提交至\n152637893@162.com。\n待审核完成后验明车主身份再\n重新注册登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
