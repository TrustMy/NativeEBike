<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.trust.ebikeapp.activity.carhistroy.ChooseTimeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_choose_time_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent="100%"
        android:background="@color/colorCarHistroyBg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="ext"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="查询条件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/activity_blue_device_disconnect"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:text="disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        app:layout_marginTopPercent = "5%"
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent = "90%"
        app:layout_heightPercent = "10%"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:textSize="24sp"
            android:text="开始日期:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/choose_time_starttv"
            android:gravity="center"
            android:textSize="24sp"
            android:text="2017-05-09"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout
        app:layout_marginTopPercent = "5%"
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent = "90%"
        app:layout_heightPercent = "10%"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:textSize="24sp"
            android:text="结束日期:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/choose_time_endtv"
            android:gravity="center"
            android:textSize="24sp"
            android:text="2017-05-15"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent = "90%"
        android:orientation="horizontal"
        app:layout_heightPercent = "10%">

        <Button
            android:id="@+id/today_btn"
            android:text="今天"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/yesterday_btn"
            android:text="昨天"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/last_week_btn"
            android:text="近七天"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>



    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent = "90%"
        android:orientation="horizontal"
        app:layout_heightPercent = "10%">

        <Button
            android:id="@+id/choose_time_cancel"
            android:text="取消"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/choose_time_determine"
            android:text="确定"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>



    </LinearLayout>



</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
