<?xml version="1.0" encoding="utf-8"?>
<com.phonegap.ebike.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phonegap.ebike.activity.carhistroy.vehicletrajectory.VehicleTrajectoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/vehicle_activity_toolbar"
        android:background="#285166"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:contentInsetStart="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_marginLeft="-6dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/vehicle_activity_back"
                android:src="@drawable/back"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="历史轨迹"
                android:textColor="#ffffff"
                android:textSize="22sp" />


            <ImageButton
                android:id="@+id/vehicle_activity_update"
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/update"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <com.amap.api.maps.MapView
        android:id="@+id/vehicle_trajectory_activity_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.amap.api.maps.MapView>
</com.phonegap.ebike.tool.uitool.PercentLinearLayout>
