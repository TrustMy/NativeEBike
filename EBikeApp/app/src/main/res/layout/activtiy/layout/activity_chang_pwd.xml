<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trust.ebikeapp.activity.changpwd.ChangPwdActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_car_location_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent="100%"
        android:background="@color/colorCarHistroyBg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="ext"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="找回密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/activity_blue_device_disconnect"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:text="disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lock"
        app:layout_marginTopPercent="6%" />

    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_marginTopPercent = "7%"
        app:layout_widthPercent="80%"
        >

        <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:gravity="center"
                android:text="手机号:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/activity_chang_pwd_phone"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent = "100%"
                app:layout_widthPercent="70%"
                android:background="@null"
                />
        </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
        <View
            android:background="#0d0d0d"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>

    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_marginTopPercent = "3%"
        app:layout_widthPercent="80%"
        >

        <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:gravity="center"
                android:text="验证码:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/activity_chang_pwd_check_num"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent = "100%"
                app:layout_widthPercent="58%"
                android:background="@null"
                />

            <TextView
                android:id="@+id/activity_chang_pwd_get_check_num"
                android:gravity="center"
                android:textColor="@color/colorTextColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="点击获取验证码"/>
        </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
        <View
            android:background="#0d0d0d"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>

    <Button
        android:id="@+id/activity_never"
        app:layout_marginLeftPercent = "10%"
        android:textColor="@color/colorTextColor"
        android:text="无法找回密码?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"/>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent = "80%"
        android:orientation="horizontal"
        app:layout_marginTopPercent = "10%"
        app:layout_heightPercent = "6%">

        <Button
            android:background="@drawable/bind_btn_off_bg"
            android:id="@+id/activity_chang_pwd_cancel"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent = "50%"
            />

        <Button
            android:id="@+id/activity_chang_pwd_determine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent = "50%"
            android:background="@drawable/bind_btn_on_bg"
            android:text="确定"
            android:textColor="@color/colorWhite" />


    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>






</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
