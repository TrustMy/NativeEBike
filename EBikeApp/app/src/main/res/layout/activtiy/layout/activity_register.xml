<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.loginorregister.RegisterActivity">

    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

    <ImageView
        android:padding="4dp"
        android:id="@+id/register_finsh"
        android:src="@drawable/ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/e_bike_loging" />


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent = "4%"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_widthPercent="80%"
        android:background="@drawable/loging_ed_bg"
        >


        <TextView
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="手机号:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            android:layout_marginLeft="14dp"
            />

        <EditText
            android:inputType="number"
            android:id="@+id/register_user"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>

    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent = "2%"
        android:background="@drawable/loging_ed_bg"
        >


        <TextView
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="密码:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            android:layout_marginLeft="14dp"
            />

        <EditText
            android:inputType="numberPassword"
            android:id="@+id/register_pwd"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>

    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent = "2%"
        android:background="@drawable/loging_ed_bg"
        >


        <TextView
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="邮箱:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            android:layout_marginLeft="14dp"
            />

        <EditText
            android:id="@+id/register_email"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent = "2%"
        android:background="@drawable/loging_ed_bg"
        >


        <TextView
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="密令:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            android:layout_marginLeft="14dp"
            />

        <EditText
            android:inputType="number"
            android:id="@+id/register_secret_order"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="70%"
            android:background="@null"
            />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent = "3%"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_heightPercent = "6%"
        app:layout_widthPercent="80%"
        android:background="@drawable/register_check_num_ed_bg"
        >




        <EditText
            android:inputType="number"
            android:paddingLeft="20dp"
            android:id="@+id/register_checknum"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="60%"
            android:background="@null"
            />

        <Button
            android:id="@+id/register_checknum_btn"
            android:textColor="@color/colorWhite"
            android:text="获取验证码"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/register_check_num_btn_bg"
            app:layout_heightPercent = "100%"
            app:layout_widthPercent="40%" />

    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>

    <Button

        app:layout_marginTopPercent = "6%"
        android:id="@+id/register_sumbit"
        android:text="注册"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "7%"
        app:layout_widthPercent="80%"
        android:background="@drawable/register_btn_bg"
        />


</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
