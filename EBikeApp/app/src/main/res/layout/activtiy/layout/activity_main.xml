<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBg"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/homefragment_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "90%"
        app:layout_widthPercent="100%"
        >



    </FrameLayout>

    <RadioGroup
        android:id="@+id/main_radiogroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        >
        <RadioButton
            android:textColor="@color/colorWhite"
            android:id="@+id/radio_home"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/home"
            android:drawablePadding="-5dp"
            android:paddingTop="4dp"
            android:text="主页面"
            android:background="@drawable/main_home_btn_bg"
            android:layout_weight="1"/>

        <RadioButton
            android:paddingTop="6dp"
            android:background="@drawable/main_home_btn_bg"
            android:textColor="@color/colorWhite"
            android:id="@+id/radio_carstatus"
            android:drawablePadding="-5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/test"
            android:text="车辆检测"
            android:layout_weight="1"/>

        <RadioButton
            android:paddingTop="8dp"
            android:background="@drawable/main_home_btn_bg"
            android:textColor="@color/colorWhite"
            android:id="@+id/radio_my"
            android:drawablePadding="-5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/home_user"
            android:text="我的"

            android:layout_weight="1"/>


    </RadioGroup>





</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
