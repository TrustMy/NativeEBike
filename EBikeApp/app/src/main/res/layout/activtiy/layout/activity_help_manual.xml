<?xml version="1.0" encoding="utf-8"?>
<com.phonegap.ebike.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phonegap.ebike.activity.helpmanual.HelpManualActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_car_location_toolbar"
        android:background="#5a8a94"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:contentInsetStart="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/activity_help_manual_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="使用说明"
                android:textColor="#ffffff"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/activity_blue_device_disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="disconnect"
                    android:textColor="#ffffff"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <WebView
        android:id="@+id/activity_help_manual_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>


</com.phonegap.ebike.tool.uitool.PercentLinearLayout>
