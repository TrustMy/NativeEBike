<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.loginorregister.LoginActivity">

    <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_widthPercent="100%">

            <com.trust.ebikeapp.tool.uitool.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_car_now_histroy_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:13 - 22:00"
                    android:textColor="#ffffff"
                    app:layout_widthPercent="30%" />


            </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_marginLeftPercent="2%">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起点:"
                        android:textColor="#ffffff"
                        app:layout_marginLeftPercent="2%" />

                    <TextView

                        android:id="@+id/activity_car_histroy_now_item_fireon_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="上海市黄浦区南京东路街道南京西路499号南都商厦附近"
                        android:textColor="#ffffff" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="终点:"
                        android:textColor="#ffffff" />

                    <TextView

                        android:id="@+id/activity_car_histroy_now_item_fireoff_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="上海市黄浦区南京东路街道南京西路499号南都商厦附近"
                        android:textColor="#ffffff" />
                </LinearLayout>

            </LinearLayout>


        </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


    </com.trust.ebikeapp.tool.uitool.PercentLinearLayout>


</LinearLayout>
