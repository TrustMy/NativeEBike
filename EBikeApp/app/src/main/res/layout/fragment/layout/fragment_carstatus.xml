<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorBg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.loginorregister.LoginActivity">

   <android.support.v7.widget.Toolbar
       android:id="@+id/carstatus_toolbar"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_heightPercent = "10%"
       app:layout_widthPercent="100%"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageButton
               android:layout_centerVertical="true"
               android:background="@null"
               android:onClick="ext"
               android:src="@drawable/back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/activity_blue_device_name"
               android:layout_centerInParent="true"
               android:textColor="#ffffff"
               android:textSize="16sp"
               android:text="车辆检测"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_alignParentRight="true"
               android:orientation="horizontal">


               <Button
                   android:id="@+id/activity_blue_device_disconnect"
                   android:visibility="gone"
                   android:textColor="#ffffff"
                   android:background="@null"
                   android:text="disconnect"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>

       </RelativeLayout>

   </android.support.v7.widget.Toolbar>


    <ImageView
        android:src="@drawable/e_bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        android:text="开始检测"
        app:layout_widthPercent="40%"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:orientation="horizontal">

        <TextView
            android:text="车辆状况:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="电机霍尔正常"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="电机霍尔正常"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="电机霍尔正常"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="电机霍尔正常"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:gravity="center_vertical"
        app:layout_heightPercent ="10%"

        >

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/electric_machinery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="8dp"
            android:id="@+id/motor_hall"
            android:layout_marginTop="6dp"
            android:text="电机霍尔"
            android:layout_toLeftOf="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" />

        <TextView
            android:layout_marginEnd="8dp"
            android:text="正常"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/view"
            android:layout_below="@+id/motor_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" />

        <View
            android:id="@+id/view"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"></View>


        <TextView

            android:id="@+id/motor_phase_line"
            android:layout_marginTop="6dp"
            android:text="电机霍尔"
            android:layout_toRightOf="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="正常"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/view"
            android:layout_below="@+id/motor_phase_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/electric_machinery_problem"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="80%"
        android:gravity="center_vertical"
        app:layout_heightPercent ="10%"

        >

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/electric_machinery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="8dp"
            android:id="@+id/turn_the_handle"
            android:layout_marginTop="6dp"
            android:text="电机霍尔"
            android:layout_toLeftOf="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" />

        <TextView
            android:layout_marginEnd="8dp"
            android:text="正常"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/views"
            android:layout_below="@+id/turn_the_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" />

        <View
            android:id="@+id/views"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"></View>


        <TextView

            android:id="@+id/controller"
            android:layout_marginTop="6dp"
            android:text="电机霍尔"
            android:layout_toRightOf="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="正常"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/views"
            android:layout_below="@+id/controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/electric_machinery_problem"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>





</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
