<?xml version="1.0" encoding="utf-8"?>
<com.trust.ebikeapp.tool.uitool.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorBg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.loginorregister.LoginActivity">

   <android.support.v7.widget.Toolbar
       android:id="@+id/carstatus_toolbar"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_heightPercent = "10%"
       app:layout_widthPercent="100%"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">




           <ImageButton
               android:id="@+id/myfragment_ext"
               android:layout_centerVertical="true"
               android:src="@drawable/out"
               android:background="@null"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"/>




       </RelativeLayout>

   </android.support.v7.widget.Toolbar>


    <ImageView
        android:src="@drawable/user"
        android:id="@+id/myfragment_user_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_marginTopPercent = "4%"
        android:textColor="@color/colorWhite"
        android:id="@+id/myfragment_user_name"
        android:text=""
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:scrollbars="none"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:id="@+id/myfragment_phone_update">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/iphone"
                    android:drawablePadding="10dp"
                    android:text="手机"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myfragment_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/phone_intent"
                    android:text="13888888888"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/phone_intent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:id="@+id/myfragment_termid_update">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icloud_down"
                    android:drawablePadding="10dp"
                    android:text="车辆解绑"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myfragment_termid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/car_unbundling"
                    android:text="888888888888888"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/car_unbundling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:id="@+id/myfragment_speed_update">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/speed"
                    android:drawablePadding="10dp"
                    android:text="限速(km/h)"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myfragment_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/chang_speed"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/chang_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/oil"
                    android:drawablePadding="10dp"
                    android:text="断油/电"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/myfragment_off_the_oil_or_electricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/iphone"
                    android:drawablePadding="10dp"
                    android:text="车灯控制"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/myfragment_car_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/off" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfragment_pwd_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/key_btn"
                    android:drawablePadding="10dp"
                    android:text="修改密码"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <ImageButton
                    android:id="@+id/myfragment_chang_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfragment_nickname_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/user_icon"
                    android:drawablePadding="10dp"
                    android:text="昵称"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <TextView
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="xxxxxx"
                    android:id="@+id/myfragment_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:layout_toLeftOf="@+id/myfragment_nickname_btn"/>


                <ImageButton
                    android:id="@+id/myfragment_nickname_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myfragment_email_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:text="电子邮件"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <TextView
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="www.xxx@qq.com"
                    android:id="@+id/myfragment_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:layout_toLeftOf="@+id/myfragment_emaill_btn"/>


                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/myfragment_emaill_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"></View>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</com.trust.ebikeapp.tool.uitool.PercentLinearLayout>
